{
    "manifest_version": 2,
    "name": "ObsidianClipper",
    "description": "A Thunderbird extension to clip messages to the Obsidian notetaking application.",
    "version": "0.5.0",
    
    "author": "Kevin N. Haw",
    "browser_specific_settings": {
        "gecko": {
            "id": "ObsidianClipper@KevinHaw.com",
            "strict_min_version": "78.0"
        }
    },
    "message_display_action": {
        "default_popup": "messagePopup/popup.html",
        "default_title": "Obsidian",
        "default_icon": "images/obsidian-icon-32px.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
          "turndown.js",
          "background.js"
        ]
    },
    "permissions": [
        "messagesModify",
        "messagesRead",
        "storage",
        "menus",
        "downloads",
        "notifications"
    ],
    "icons": {
        "64": "images/obsidian-icon-64px.png",
        "48": "images/obsidian-icon-48px.png",
        "32": "images/obsidian-icon-32px.png",
        "16": "images/obsidian-icon-16px.png"
    }
}